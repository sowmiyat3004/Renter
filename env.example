# Database
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google Maps & Places API (Get from Google Cloud Console)
# IMPORTANT: Use NEXT_PUBLIC_ prefix for client-side access
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key-here"
GOOGLE_PLACES_API_KEY="your-google-places-api-key-here"
ENABLE_GOOGLE_PLACES="true"
LOCATION_CACHE_DURATION="86400000"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-change-this-in-production"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@renter.com"

# File Upload Configuration
MAX_FILE_SIZE="1048576" # 1MB in bytes
MAX_IMAGES_PER_LISTING="10"
UPLOAD_DIR="./public/uploads"

# Application Settings
APP_NAME="Renter"
APP_URL="http://localhost:3000"
APP_DESCRIPTION="Find your perfect rental property"

# Security Settings
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"
AUTH_RATE_LIMIT_MAX="5"

# System Configuration
DEFAULT_SEARCH_RADIUS_KM="10"
AUTO_APPROVE_THRESHOLD="0"
MAX_IMAGE_SIZE_MB="1"
DEFAULT_COUNTRY="India"
DEFAULT_CURRENCY="INR"
DEFAULT_TIMEZONE="Asia/Kolkata"

# Monitoring & Analytics (Optional)
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"

# CDN Configuration (Optional)
CDN_URL="https://your-cdn-domain.com"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket"

# Redis Configuration (Optional - for production)
REDIS_URL="redis://localhost:6379"

# Environment
NODE_ENV="development"

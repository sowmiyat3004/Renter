# Database
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="development-secret-key-for-local-testing-only"

# Google OAuth (Optional for demo)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# JWT Configuration
JWT_SECRET="development-jwt-secret-for-local-testing"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@renter.com"

# File Upload Configuration
MAX_FILE_SIZE="1048576"
MAX_IMAGES_PER_LISTING="10"
UPLOAD_DIR="./public/uploads"

# Application Settings
APP_NAME="Renter"
APP_URL="http://localhost:3000"
APP_DESCRIPTION="Find your perfect rental property in India"

# Security Settings
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
AUTH_RATE_LIMIT_MAX="5"

# System Configuration
DEFAULT_SEARCH_RADIUS_KM="10"
AUTO_APPROVE_THRESHOLD="0"
MAX_IMAGE_SIZE_MB="1"
DEFAULT_COUNTRY="India"
DEFAULT_CURRENCY="INR"
DEFAULT_TIMEZONE="Asia/Kolkata"

# Environment
NODE_ENV="development"
